		<?php
			$fnum= $_POST["fnum"];
			$snum=$_POST["snum"];
			echo $fnum." and ".$snum;
			if ($fnum>$snum) {
				echo ", ".$fnum." is the highest";
			}
			else if ($fnum<$snum) {
				echo ", ".$snum." is the highest";
			}
			else {
				echo " are equal";
			}
		?>
